# ===============================
# Cổng mà server Tin tức sẽ chạy
# Web/App sẽ gọi API qua cổng này
# ===============================
PORT=3000

# Môi trường chạy ứng dụng
# development: dùng khi làm đồ án
NODE_ENV=development


# ===============================
# Cấu hình Database
# Backend dùng DB để lưu tin tức,
# tránh trùng lặp và lưu lịch sử
# ===============================

# Địa chỉ máy chủ database
# (Nếu Node chạy trên máy, Postgres qua Docker → dùng localhost)
DB_HOST=localhost

# Cổng database (PostgreSQL mặc định)
DB_PORT=5432

# Tên database lưu tin tức
DB_NAME=news_service

# Tài khoản đăng nhập database
DB_USER=postgres
DB_PASSWORD=postgres


# ===============================
# Cấu hình thu thập tin RSS (Scheduler)
# ===============================

# Chu kỳ backend tự động lấy tin mới (phút)
# Theo yêu cầu hiện tại: 5 phút / lần
INGEST_INTERVAL_MINUTES=5
